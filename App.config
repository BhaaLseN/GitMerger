<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="castle" type="Castle.Windsor.Configuration.AppDomain.CastleSectionHandler, Castle.Windsor" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <castle>
    <components>
      <component id="hostSettings">
        <parameters>
          <BaseAddress>http://localhost:4486/merger</BaseAddress>
        </parameters>
      </component>
      <component id="jiraSettings">
        <parameters>
          <ValidResolutions>
            <array>
              <!-- "1" is "Fixed" -->
              <item>1</item>
            </array>
          </ValidResolutions>
        </parameters>
      </component>
      <component id="gitSettings">
        <parameters>
          <GitExecutable>C:\Program Files (x86)\Git\cmd\git.exe</GitExecutable>
          <RepositoryBasePath>d:\_dev\GitMerger\Repositories</RepositoryBasePath>
          <RepositoryUrls>
            <array>
              <item>git@github.com/BhaaLseN/GitMerger</item>
              <item>https://github.com/BhaaLsen/GitMerger.git</item>
            </array>
          </RepositoryUrls>
        </parameters>
      </component>
    </components>
  </castle>
</configuration>
